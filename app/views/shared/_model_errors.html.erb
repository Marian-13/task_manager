<% if model.errors.any? %>
  <div class="alert alert-danger">
    <%= pluralize(model.errors.count, "error") %> prohibited this
    <%= model.class.name.downcase %> from being saved:

    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
